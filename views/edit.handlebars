<form action="/restaurants/{{ restaurant._id }}/edit" method="POST">
  <div class="container text-center mt-3">
    <button type="submit" class="btn btn-info">Save</button>
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="/">back</a>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-12 col-md-10 mx-auto">

        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-utensils pr-2"></i>
            名稱：<input type="text" placeholder="name" name="name" value="{{ restaurant.name }}">
          </span>
        </p>

        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-utensils pr-2"></i>
            類別：<input type="text" placeholder="name" name="category" value="{{ restaurant.category }}">
          </span>
        </p>

        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-map-marker-alt pr-2"></i>
            地址：<input type="text" placeholder="name" name="location" value="{{ restaurant.location }}">
          </span>
          <a href="https://goo.gl/maps/V9mKwVJ4s5v" class="text-secondary" target="_blank">
            <i class="fas fa-location-arrow pr-2 fa-xs"></i>
          </a>
        </p>

        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-mobile-alt pr-2"></i>
            電話：<input type="text" placeholder="name" name="phone" value="{{ restaurant.phone }}">
          </span>
        </p>

        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-mobile-alt pr-2"></i>
            簡介：<input type="text" placeholder="name" name="description" value="{{ restaurant.description }}">
          </span>
        </p>

        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-mobile-alt pr-2"></i>
            評分：<input type="number" step="0.1" placeholder="rating" name="rating" value="{{ restaurant.rating }}">
          </span>
        </p>

        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-mobile-alt pr-2"></i>
            照片：<input type="url" placeholder="image url" name="image" value="{{ restaurant.image }}">
          </span>
        </p>

      </div>
    </div>
  </div>
</form>